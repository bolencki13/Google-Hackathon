extends layout.pug

block styles
    script(src="http://canvasjs.com/assets/script/canvasjs.min.js")

block content
    container(id="chartContainer")
        
    
    script.
        var width = window.innerWidth;
        if (width > 768) width = window.innerWidth/2-80;
        
        window.onload = function () {
            var frequency = [{x: 1, y:120}, {x: 2, y: 125}, {x: 3, y: 135}, {x: 4, y: 118}, {x: 5, y: 121},{x: 6, y: 110}, {x: 7, y: 132}, {x: 8, y: 128}, {x: 9, y: 132}, {x: 10, y: 138}];
