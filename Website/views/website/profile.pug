            var chart = new CanvasJS.Chart("chartContainer",{
                title :{
                    text: "Usage Over Time"
                },
                width: width,
                axisX: {
                    title: "Day"
                },
                axisY: {
                    title: "Count"
                },
                data: [{
                    type: "line",
                    showInLegend: true,
                    legendText: "Nicotene Level",
                    dataPoints : nicLevel,
                },
                {
                    type: "line",
                    showInLegend: true,
                    legendText: "Total Seconds Inhaling",
                    dataPoints: frequency,
                }]
            });
            chart.render();
            console.log("asdf");
        }
